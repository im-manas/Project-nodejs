<%-include('../Includes/header.ejs')%>
</head>
<body style="background-color: rgb(228, 228, 228);">
  
  <%-include('../Includes/navigation.ejs')%>
    <br>
    <%if(data.length>0){%>
    <div class="container">
        <form class="container d-flex" action="/search" method="post" style="width: 350px;">
            <input class="form-control me-2" type="text" name="search" placeholder="Search by product name" required>
            <button class="btn btn-outline-primary" type="submit">Search</button>
          </form>
<br>

        <div class="row row-cols-1 row-cols-md-2 g-4">
            <%for(let x of data){%>
                <div class="col col-lg-4 col-md-6 col-sm-8 col-xs-12"> 
                    <div class="card border-primary" style="width: 20rem;">
                        <% if(x.p_image){ %>
                            <img class="card-img-top" src="<%=x.p_image%>" alt="image">
                            <% } %>
                        <div class="card-body">
                            <h5 class="card-title">Product name : <%=x.title%></h5>
                            <h5 class="card-text">Price :  <%=x.price%> </h5>
                            <h6 class="card-text">Descrption: <%=x.description%></h6>  
                            <a href="/details/<%=x._id%>">Details</a>
                        </div>
                    </div>
                </div>
              <%}%>  
        </div>
    </div>
     <%}else{%>
        <h1 style="text-align: center;">Data Not Found</h1>
    <%}%>

<br><br>

    
<%-include('../Includes/footer.ejs')%>